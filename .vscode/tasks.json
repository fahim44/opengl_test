{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "args": ["cmake -DCMAKE_BUILD_TYPE=Debug .."]     
        },
        /*{
            "label": "make",
            "type": "shell",
            "args": ["make -j 8"],
            "group": "build",            
        },*/

        {
            "label": "build",
            "type": "shell",
            "args": ["cmake --build ."],
            "group": "build",            
        },

        {
            "label": "install",
            "type": "shell",
            "args": ["cmake --install ."],
            "group": "build",            
        }
    ]
}